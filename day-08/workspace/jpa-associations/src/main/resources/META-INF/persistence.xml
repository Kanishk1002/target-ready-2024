<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <!-- a persistence-unit is used for creating an instance of EntityManagerFactory    -->
    <persistence-unit name="TARGET-READY-2024" transaction-type="RESOURCE_LOCAL">
<!--        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.targetindia.entity.Product</class>
        <class>com.targetindia.entity.Category</class>
        <class>com.targetindia.entity.Shipper</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/targetready"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="Welcome#123"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        </properties>

    </persistence-unit>
</persistence>
